<Window x:Class="OtexumPulse.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Otexum Pulse — Settings"
        Width="640" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0F0F13">
    <Window.Resources>
        <!-- Accent + neutrals -->
        <SolidColorBrush x:Key="Accent" Color="#7B61FF"/>
        <SolidColorBrush x:Key="CardBg" Color="#16161C"/>
        <SolidColorBrush x:Key="TextMain" Color="#EAEAF2"/>
        <SolidColorBrush x:Key="TextSub" Color="#A9A9B6"/>
        <SolidColorBrush x:Key="Stroke" Color="#262630"/>

        <!-- Label style -->
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSub}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background" Value="#1E1E27"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <!-- CheckBox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>

        <!-- Button style with subtle glow -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background" Value="#21212B"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Small glyph (Segoe MDL2 Assets) -->
        <Style x:Key="Glyph" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Outer padding -->
    <Grid Margin="16">
        <!-- Title -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Image Source="../Resources/app.ico"
           Width="24" Height="24"
           Margin="0,0,8,0"
           RenderOptions.BitmapScalingMode="HighQuality"/>
            <TextBlock Text="Otexum Pulse"
               Foreground="{StaticResource TextMain}"
               FontSize="18"
               FontWeight="SemiBold"
               VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Card -->
        <Border Grid.Row="1" Margin="0,42,0,56"
                Background="{StaticResource CardBg}"
                BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                CornerRadius="12" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row: EXE -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Application to launch" Style="{StaticResource Label}"/>
                    <TextBox  Grid.Column="1" x:Name="ExePathBox" />
                    <Button   Grid.Column="2" Content="Browse…" Click="Browse_Click"/>
                </Grid>

                <!-- Divider -->
                <Rectangle Grid.Row="1" Height="1" Fill="{StaticResource Stroke}" Margin="0,2,0,0"/>

                <!-- Row: Idle minutes -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Idle threshold (minutes)" Style="{StaticResource Label}"/>
                    <TextBox  Grid.Column="1" x:Name="IdleBox" Width="80" HorizontalAlignment="Left"
                              ToolTip="Type 1–240"
                              PreviewTextInput="IdleBox_PreviewTextInput"
                              DataObject.Pasting="IdleBox_Pasting"
                              KeyDown="IdleBox_KeyDown"
                              LostFocus="IdleBox_LostFocus"/>
                </Grid>

                <!-- Divider -->
                <Rectangle Grid.Row="3" Height="1" Fill="{StaticResource Stroke}" Margin="0,2,0,0"/>

                <!-- Row: options -->
                <StackPanel Grid.Row="4" Orientation="Vertical">
                    <CheckBox x:Name="StartWithWindows" Content="Start with Windows (current user)"/>
                    <CheckBox x:Name="StartMinimized" Content="Start minimized to tray"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer buttons -->
        <DockPanel VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="110" Margin="0,0,8,0" Click="Save_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource Glyph}" Text="&#xE105;"/>
                        <TextBlock Text="Save"/>
                    </StackPanel>
                </Button>
                <Button Width="110" Click="Close_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource Glyph}" Text="&#xE8BB;"/>
                        <TextBlock Text="Close"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
